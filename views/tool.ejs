<% pagetype = 'tool' %>
<% title = toolname %>
<% if (typeof csslist != 'object') csslist = [] %>
<%- include('layout/head', {
    csslist: csslist,
    metalist: [
        {
            name: "description",
            content: typeof description == 'object' ? description[0] : description,
        }
    ]
}) %>
<%- include('layout/appbar') %>
<%- include('layout/drawer') %>
<%- include('layout/i18n') %>


<div class="mdui-container main">
  <h1><%= toolname %></h1>
  <div class="description mdui-typo">
    <% if (typeof description == 'string') { %>
      <%= description %>
    <% } else if ('length' in description) { %>
      <ul>
      <% description.forEach(function(i) { %>
        <li><%= i %></li>
      <% }) %>
      </ul>
    <% } %>
  </div>
  <% if (typeof similartag != 'undefined') { %>
  <div class="similartag mdui-typo">
    <div class="similartag-desc"><%= __('similartag', lang) %></div>
    <% similartag.forEach(function(i) { %>
    <a href="/<%= i.tool %>" target="_blank"><%= i.toolname %></a>
    <% }) %>
  </div>
  <% } %>

  <%- include(tpl) %>

</div>

<% if (typeof scriptlist != 'object') scriptlist = [] %>
<% if (typeof script != 'string') script = null %>
<%- include('layout/foot', {
    scriptlist: scriptlist,
    script: script,
}) %>
