<% pagetype = 'tool' %>
<% title = catename %>
<%- include('layout/head', {
    csslist: [

    ],
    title: title
}) %>
<%- include('layout/appbar') %>
<%- include('layout/drawer') %>
<%- include('layout/i18n') %>

<div class="mdui-container main">
  <h1><%= catename %><%= __('tool', lang) %></h1>
  <% if (typeof items == 'object') { %>
  <div class="mdui-row">
      <% items.forEach(function(item) { %>
      <div class="mdui-col-sm-6 mdui-col-md-4 mdui-col-lg-3">
        <div class="mdui-card item">
          <div class="mdui-card-header">
            <div class="mdui-card-header-title"><%= item.toolname %></div>
            <div class="mdui-card-header-subtitle">
              <% if (typeof item.description == 'string') { %>
                <%= item.description %>
              <% } else if ('length' in item.description) { %>
                <%= item.description[0] %>
              <% } %>
            </div>
          </div>
          <a href="/<%= item.tool %>" title="<%= item.description %>" target="_blank"></a>
        </div>
      </div>
      <% }) %>
  </div>
  <% } else { %>
  <div>
      No result.
  </div>
  <% } %>
</div>


<% if (typeof scriptlist != 'object') scriptlist = [] %>
<% if (typeof script != 'string') script = null %>
<%- include('layout/foot', {
    scriptlist: scriptlist,
    script: script,
}) %>
